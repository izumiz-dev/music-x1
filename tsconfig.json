{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "jsxFactory": "h",
    "module": "es2015",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["chrome", "node"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
