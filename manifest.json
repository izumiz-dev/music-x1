{
  "manifest_version": 3,
  "name": "Music X1",
  "version": "1.0.0",
  "description": "",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.googleapis.com/youtube/v3/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
