{
  "manifest_version": 3,
  "name": "Music X1",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup/index.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.googleapis.com/youtube/v3/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
      "https://youtube.com/*"
    ],
    "js": ["content/youtube.js"]
  }
],
  "options_page": "pages/options/index.html"
}
